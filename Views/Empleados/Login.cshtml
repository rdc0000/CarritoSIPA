@model Empleado
@{
    ViewData["Title"] = "Login";
}<br />
<br />
    <div class="card border-dark mb-3" style="width: 35rem;margin:auto;">
        <div class="card-body text-dark">
            <form>
                <div class="form-group">
                     <label asp-for="Input.Email" for="Email"><h5><i class="fas fa-users-cog"></i> &nbsp;Correo electronico</h5></label>
                    <input asp-for="Input.Email" type="email" class="form-control" id="Email" aria-describedby="emailHelp" placeholder="Ingrese correo electronico">
                    
                </div>
                <div class="form-group">
                    <label asp-for="Input.Contraseña" for="Password"><h5><i class="fas fa-unlock-alt"></i> &nbsp;Contraseña</h5></label>
                    <input asp-for="Input.Contraseña" type="password" class="form-control" id="Password" placeholder="Ingrese su contraseña">
                </div>
                <button type="submit" class="btn btn-outline-dark" asp-controller="Home" asp-action="Admin">Ingresar</button>
                <div class="alert alert-warning" role="alert">
                    <p id="alert"></p>
                </div>
            </form>
        </div>
    </div>
<script>
    
</script>
