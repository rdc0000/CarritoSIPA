@model IEnumerable<Carrito.Models.Articulo>

@{
    ViewData["Title"] = "Index";
}
<br />
<h2>Articulos</h2>

<p>
    <a class="btn btn-outline-success" title="Nuevo articulo" asp-action="Create"><i class="fas fa-cart-plus"></i></a>
</p>
<table class="table table-hover table-striped table-dark">
    <thead class="text-center text-warning">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Proveedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Proveedor.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imagen)
            </td>
            <td>
                <a class="btn btn-outline-warning"asp-action="Edit" asp-route-id="@item.ArticuloID"><i class="fas fa-box-open"></i></a>
                <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.ArticuloID"><i class="fas fa-info"></i></a>
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.ArticuloID"><i class="fas fa-cart-arrow-down"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a class="btn btn-warning" asp-controller="Home" asp-action="Admin"><i class="fas fa-backspace"></i></a>
</div>
